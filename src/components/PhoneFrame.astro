---
import phoneFrame from "@/assets/phoneframe.webp";

interface Props {
  src: ImageMetadata;
  alt: string;
}

const { src, alt } = Astro.props;
---

<div class="relative mx-auto w-full sm:max-w-[330px] aspect-[330/700] select-none drop-shadow-2xl">
  
  <div class="absolute inset-0 z-20 pointer-events-none">
    <img 
      src={phoneFrame.src} 
      alt="" 
      class="w-full h-full object-contain" 
    />
  </div>

  <div 
    class="absolute z-10 bg-black overflow-hidden"
    style="
      top: 2%; 
      left: 3.5%; 
      width: 93%; 
      height: 96%;
    "
  >
    <img 
      src={src.src} 
      alt={alt} 
      class="w-full h-full object-cover"
    />
  </div>
</div>